<h2>
    <%= book.title %>
</h2>
<img width="100" height="150" src="<%= book.coverImagePath %>" alt="<%= book.title %>">
<div>Author : <%= book.author.name %>
</div>
<div>
    Publish Date : <%= book.publishDate.toDateString() %>
</div>
<div>
    Description : <%= book.description %>
</div>
<div>
    Book's page : <%= book.pageCount %>
</div>
<button onclick="document.location.href= '/books/<%= book.id %>/edit' ">Edit</button>
<%- include("../partials/deleteForm", {url: `/books/${book.id}` }) %>
    <button onclick="document.location.href= '/authors/<%= book.author.id %>' ">View Author</button>